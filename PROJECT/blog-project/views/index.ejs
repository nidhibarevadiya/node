<%- include("partials/header") %>
<h1>All Blogs</h1>
<% if (blogs.length === 0) { %>
  <div class="empty-state"><p>No blogs yet â€” <a class="nav-link" href="/blogs/create">create one</a>!</p></div>
<% } %>
<div class="blog-list">
<% blogs.forEach(blog => { %>
  <div class="blog-card">
    <div class="content">
      <h2><%= blog.title %></h2>
      <p class="meta">Published: <%= new Date(blog.createdAt).toLocaleString() %></p>
      <p><%= blog.snippet %></p>
    </div>
    <div class="actions">
      <a class="btn btn-primary" href="/blogs/<%= blog._id %>">Read</a>
      <a class="btn btn-ghost" href="/blogs/edit/<%= blog._id %>">Edit</a>
      <a class="btn btn-ghost" href="/blogs/delete/<%= blog._id %>">Delete</a>
    </div>
  </div>
<% }) %>
</div>
<%- include("partials/footer") %>